/* pages/categories/categories.wxss */

.tabNav {
    z-index: 4;
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background: #fff;
    display: flex;
    white-space: nowrap;
    padding: 0 30rpx;
    border-bottom: 1px solid #f5f5f5;
    box-sizing: border-box;
}

.tabNav .tab-item text {
    padding: 0 15rpx;
    height: 75rpx;
    display: inline-block;
}

.tabNav .current-tab text {
    border-bottom: 5rpx solid #d9534f;
    color: #000;
}

.post-list {
    margin-top: 0;
}